<% provide(:title, 'Many a little makes') %>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand" href="#">malm</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">分報</a></li>
        <li><a href="#">日報</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">設定</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="content">
  <div class="container">
    <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <div class="item-content" id="item-content" style="height:500px; overflow:scroll;">
        <table class="table table-condensed" style="/* background-color: rgb(251, 251, 249);*/">
          <tbody id="table-item">
            <% if !@items.nil? then %>
              <% @items.each do |item| %>
                <tr style="/* background-color: rgb(251, 251, 249);*/">
                  <td style="/* background-color: rgb(251, 251, 249);*/"><h4><%= item.text %></h4></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    </div>
    <div class="row">
      <%= form_for(@item, :url => {:controller => 'items', :action => 'index'}, remote: true) do |f| %>
        <div class="col-md-6 col-md-offset-1"><%= f.text_field :text, class: 'form-control', :placeholder => 'なにか書く' %></div>
        <div class="col-md-4"><%= f.submit "投稿", class: 'btn btn-default btn-primary' %></div><br />
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#item-content').scrollTop($('#item-content')[0].scrollHeight);
</script>
